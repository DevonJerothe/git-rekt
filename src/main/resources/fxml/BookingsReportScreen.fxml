<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../fxcss/Master.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gitrekt.resort.controller.BookingsReportScreenController">
   <children>
      <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox fx:id="categorySpinner" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="830.0" prefWidth="1000.0" stylesheets="@../fxcss/Master.css">
               <children>
                  <BarChart fx:id="barChart" prefHeight="700.0" title="Booking Percentages By Category">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis autoRanging="false" label="Percentage Booked" side="LEFT" />
                    </yAxis>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                  </BarChart>
                  <Label fx:id="monthYearLabel" text="October, 2017" textFill="WHITE">
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button fx:id="previousMonthButton" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onPreviousMonthButtonClicked" prefWidth="110.0" text="Previous Month" />
                        <Separator orientation="VERTICAL" />
                        <ComboBox fx:id="categoryComboBox" onAction="#onComboBoxChanged" prefWidth="150.0" promptText="Category" />
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="nextMonthButton" mnemonicParsing="false" onAction="#onNextMonthButtonClicked" prefWidth="100.0" text="Next Month" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
    <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
   </children>
</AnchorPane>
