            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Separator prefWidth="200.0" />
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="43.0" />
